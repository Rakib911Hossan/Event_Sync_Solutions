<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="605.0" prefWidth="1143.0" stylesheets="@style.css" style="-fx-background-color: #2b2d42;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Corporate.Event_Sync.controller.AboutController">

        <!-- Back Button -->
        <Button fx:id="back" layoutX="54.0" layoutY="47.0" mnemonicParsing="false" onAction="#mainDashboard" text="Back" />

        <!-- Exit Button -->
        <Button layoutX="55.0" layoutY="527.0" mnemonicParsing="false" onAction="#handleExit" prefHeight="28.0" prefWidth="57.0" text="Exit" />

        <!-- Scrollable About Section -->
        <ScrollPane layoutX="200.0" layoutY="100.0" prefHeight="400.0" prefWidth="800.0" style="-fx-background-color: transparent;">
                <AnchorPane>
                        <!-- Title -->
                        <Label fx:id="titleLabel" layoutX="10.0" layoutY="10.0"
                               style="-fx-font-size: 30px; -fx-font-weight: normal; -fx-text-fill: #000;  -fx-effect: null;" />

                        <!-- Description -->
                        <Label fx:id="descriptionLabel" layoutX="10.0" layoutY="60.0" prefWidth="780.0" wrapText="true"
                               style="-fx-font-size: 20px; -fx-font-weight: normal; -fx-text-fill: #000; -fx-effect: null;" />

                        <!-- Features Header -->
                        <Label fx:id="featuresLabel" layoutX="10.0" layoutY="180.0"
                               style="-fx-font-size: 26px; -fx-font-weight: normal; -fx-text-fill: #000; -fx-effect: null;" />

                        <!-- Features Detail -->
                        <Label fx:id="featuresDetailLabel" layoutX="10.0" layoutY="230.0" prefWidth="780.0" wrapText="true"
                               style="-fx-font-size: 18px; -fx-font-weight: normal; -fx-text-fill: #000; -fx-effect: null;" />
                </AnchorPane>

        </ScrollPane>

</AnchorPane>
