<?xml version="1.0" encoding="UTF-8"?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>

<AnchorPane prefHeight="490.0" prefWidth="677.0" style="-fx-background-color: #e8f0fe;"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22"
            fx:controller="com.Corporate.Event_Sync.controller.LoginController">
    <children>
        <!-- Outer VBox for the centered login area -->
        <VBox alignment="CENTER" prefWidth="50.0" prefHeight="50.0" maxWidth="400.0" maxHeight="400.0" spacing="15.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="User Login" />

            <!-- Inner VBox with a larger white background area -->
            <VBox alignment="CENTER_LEFT" spacing="12.0" maxWidth="360.0" prefWidth="340.0"
                  style="-fx-background-radius: 25; -fx-background-color: white; -fx-padding: 20px;">
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #34495e;" text="Email:" />
                    <JFXTextField fx:id="emailField" prefHeight="28.0" prefWidth="225.0"
                                  promptText="Enter Email"
                                  style="-fx-background-color: #fdfdff; -fx-border-color: #b0c4de; -fx-border-radius: 5px; -fx-padding: 5px;">
                        <focusColor>
                            <!-- Color Gradient 1 -->
                            <LinearGradient endX="1.0" endY="1.0">
                                <stops>
                                    <Stop>
                                        <color>
                                            <Color red="0.9" green="0.4" blue="0.3" />
                                        </color>
                                    </Stop>
                                    <Stop offset="1.0">
                                        <color>
                                            <Color red="0.7" green="0.1" blue="0.4" />
                                        </color>
                                    </Stop>
                                </stops>
                            </LinearGradient>
                        </focusColor>
                    </JFXTextField>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #34495e;" text="Password:" />
                    <JFXPasswordField fx:id="passwordField" prefHeight="28.0" prefWidth="198.0"
                                      promptText="Enter Password"
                                      style="-fx-background-color: #fdfdff; -fx-border-color: #b0c4de; -fx-border-radius: 5px; -fx-padding: 5px;">
                        <focusColor>
                            <!-- Color Gradient 2 -->
                            <LinearGradient endX="1.0" endY="1.0">
                                <stops>
                                    <Stop>
                                        <color>
                                            <Color red="0.2" green="0.7" blue="0.8" />
                                        </color>
                                    </Stop>
                                    <Stop offset="1.0">
                                        <color>
                                            <Color red="0.1" green="0.5" blue="0.9" />
                                        </color>
                                    </Stop>
                                </stops>
                            </LinearGradient>
                        </focusColor>
                    </JFXPasswordField>
                </HBox>
            </VBox>
            <JFXButton onAction="#handleLogin" prefWidth="120.0" text="Login"
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5px; -fx-cursor: hand;" />
            <Label fx:id="messageLabel" style="-fx-font-size: 12px;" textFill="#e74c3c" />
        </VBox>
    </children>
</AnchorPane>
