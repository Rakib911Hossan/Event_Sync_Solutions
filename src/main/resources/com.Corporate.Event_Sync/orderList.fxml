<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="934.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Corporate.Event_Sync.controller.OrderListController">
    <children>
        <TableView fx:id="orderTable" layoutX="313.0" layoutY="91.0" prefHeight="441.0" prefWidth="596.0">
            <columns>
                <TableColumn fx:id="orderIdColumn" text="Order ID" />
                <TableColumn fx:id="menuItemIdColumn" prefWidth="111.0" text="Menu Item ID" />
                <TableColumn fx:id="statusColumn" prefWidth="107.0" text="Status" />
                <TableColumn fx:id="orderDateColumn" prefWidth="192.0" text="Order Date" />
                <TableColumn fx:id="deleteOrderColumn" prefWidth="104.0" text="Delete Order" /> <!-- New Update Column -->
            </columns>
        </TableView>

        <Label layoutX="536.0" layoutY="40.0" prefHeight="37.0" prefWidth="188.0" text="Order List">
            <font>
                <Font name="System Bold" size="25.0" />
            </font>
        </Label>

        <!-- Update Fields -->
        <Label layoutX="35.0" layoutY="200.0" text="Order ID:" />
        <ComboBox fx:id="orderIdComboBox" layoutX="124.0" layoutY="196.0" prefHeight="24.0" prefWidth="143.0" /> <!-- For selecting order ID -->

        <Label layoutX="34.0" layoutY="232.0" text="Menu Item ID:" />
        <ComboBox fx:id="menuItemComboBox" layoutX="175.0" layoutY="230.0" prefHeight="24.0" prefWidth="92.0" /> <!-- For entering new menu item ID -->

        <Label layoutX="34.0" layoutY="264.0" text="Order Date:" />
        <DatePicker fx:id="orderDatePicker" layoutX="124.0" layoutY="260.0" prefHeight="24.0" prefWidth="143.0" /> <!-- For entering new order date -->

        <Label layoutX="34.0" layoutY="296.0" text="Status:" />
        <ComboBox fx:id="statusComboBox" layoutX="124.0" layoutY="292.0" prefHeight="24.0" prefWidth="143.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="ORDERED" />
                    <String fx:value="PREPARED" />
                    <String fx:value="SERVED" />
                </FXCollections>
            </items>
        </ComboBox> <!-- For selecting order status -->

        <!-- Buttons -->
        <ButtonBar prefHeight="40.0" prefWidth="200.0" />
        <Button layoutX="34.0" layoutY="91.0" mnemonicParsing="false" text="Home" />
        <Button layoutX="34.0" layoutY="501.0" mnemonicParsing="false" text="Exit" />
      <Label layoutX="75.0" layoutY="144.0" prefHeight="37.0" prefWidth="200.0" text="Update Order">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Button layoutX="100.0" layoutY="360.0" mnemonicParsing="false" text="Update Order" />

    </children>
</AnchorPane>
