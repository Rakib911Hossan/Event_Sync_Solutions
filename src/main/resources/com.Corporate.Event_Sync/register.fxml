<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<AnchorPane prefHeight="600.0" prefWidth="720.0" style="-fx-background-color: linear-gradient(to bottom, #333333, #1a1a1a);"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22"
            fx:controller="com.Corporate.Event_Sync.controller.RegisterController">
    <children>

        <!-- Date and Time Label -->
        <Label fx:id="dateTimeLabel" text="Date and Time"
               style="-fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-font-weight: bold;"
               AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"/>

        <VBox alignment="CENTER" maxWidth="400.0" maxHeight="520.0" spacing="15.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <!-- Title Label -->
            <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #ffffff;" text="Register" />

            <!-- Main Form Container -->
            <VBox alignment="CENTER_LEFT" spacing="15.0" maxWidth="400.0" prefWidth="400.0"
                  style="-fx-background-radius: 20; -fx-background-color: #ffffff; -fx-padding: 25px; -fx-effect: dropshadow(gaussian, rgba(200,200,200,0.5), 10, 0.3, 0, 5);">

                <!-- Name Field -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #606c76;" text="Name" />
                    <JFXTextField fx:id="nameField" prefHeight="40.0" prefWidth="230.0"
                                  promptText="Enter your name"
                                  styleClass="input-field" />
                </HBox>

                <!-- Email Field -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #606c76;" text="Email" />
                    <JFXTextField fx:id="emailField" prefHeight="40.0" prefWidth="230.0"
                                  promptText="Enter your email"
                                  styleClass="input-field" />
                </HBox>

                <!-- Department Field -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #606c76;" text="Department" />
                    <JFXTextField fx:id="departmentField" prefHeight="40.0" prefWidth="230.0"
                                  promptText="Enter department"
                                  styleClass="input-field" />
                </HBox>

                <!-- Password Field -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #606c76;" text="Password" />
                    <JFXPasswordField fx:id="passwordField" prefHeight="40.0" prefWidth="200.0"
                                      promptText="Enter password"
                                      styleClass="input-field" />
                </HBox>

                <!-- Role ComboBox -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #606c76;" text="Role" />
                    <JFXComboBox fx:id="roleComboBox" prefHeight="40.0" prefWidth="230.0"
                                 promptText="Select role"
                                 styleClass="input-field">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="ADMIN"/>
                                <String fx:value="USER"/>
                            </FXCollections>
                        </items>
                    </JFXComboBox>
                </HBox>

                <!-- Office ID Field -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #606c76;" text="Office ID" />
                    <JFXTextField fx:id="officeIdField" prefHeight="40.0" prefWidth="230.0"
                                  promptText="Enter office ID"
                                  styleClass="input-field" />
                </HBox>
            </VBox>

            <!-- Register Button -->
            <JFXButton fx:id="registerButton" onAction="#handleRegister" text="Register" prefWidth="130.0"
                       style="-fx-background-color: linear-gradient(to right, #4caf50, #81c784); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15px; -fx-cursor: hand;"
            />

            <!-- Message Label -->
            <Label fx:id="messageLabel" style="-fx-font-size: 12px; -fx-text-fill: #ff6b6b; -fx-font-weight: bold;" />

        </VBox>

        <!-- Floating Login Button -->
        <JFXButton fx:id="loginButton" text="Login" onAction="#switchToLogin" prefWidth="70.0"
                   style="-fx-background-color: linear-gradient(to right, #64b5f6, #90caf9); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-cursor: hand;"
                   AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="10.0"/>

        <!-- Floating Exit Button -->
        <JFXButton fx:id="exitButton" text="Exit" onAction="#handleExit" prefWidth="70.0"
                   style="-fx-background-color: linear-gradient(to right, #e57373, #ef5350); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-cursor: hand;"
                   AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"/>
    </children>
</AnchorPane>
