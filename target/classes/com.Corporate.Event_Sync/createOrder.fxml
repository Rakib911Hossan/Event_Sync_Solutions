<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="orderDashboard" prefHeight="680.0" prefWidth="1243.0" style="-fx-background-color: #2b2d42;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Corporate.Event_Sync.controller.CreateOrderController">

    <children>
        <!-- Header -->
        <Button layoutX="38.0" layoutY="64.0" onAction="#navigateToHome" text="Home" />
        <Label layoutX="646.0" layoutY="43.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4caf50;" text="Menu Items" />

        <!-- Left Panel - Order Form with ScrollPane -->
        <ScrollPane layoutX="34.0" layoutY="100.0" prefHeight="532.0" prefWidth="280.0"
                    style="-fx-background: #4a4e69; -fx-background-color: #4a4e69; -fx-background-radius: 10;"
                    fitToWidth="true" hbarPolicy="NEVER">
            <VBox spacing="10.0" style="-fx-background-color: #4a4e69; -fx-background-radius: 15; -fx-padding: 15px;">

                <!-- Title -->
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #4caf50;" text="Create Order" />

                <!-- Date Selection -->
                <VBox spacing="5.0">
                    <Label style="-fx-text-fill: #ffffff;" text="Date:" />
                    <DatePicker fx:id="orderDatePicker" prefWidth="230.0" />
                </VBox>

                <!-- Menu Item Selection -->
                <VBox spacing="5.0">
                    <Label style="-fx-text-fill: #ffffff;" text="Menu Item:" />
                    <ComboBox fx:id="menuItemComboBox" prefWidth="230.0" promptText="Select Menu Item" />
                </VBox>

                <!-- Location -->
                <Button fx:id="setLocations" onAction="#setLoction" prefWidth="230.0" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Set Location" />

                <!-- Offer Token Section -->
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #FFD700;" text="Have an Offer Token?" />

                <HBox spacing="8.0" alignment="CENTER_LEFT">
                    <TextField fx:id="offerTokenField" prefWidth="150.0" promptText="Enter token"
                               style="-fx-background-color: #2C3E50; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6;" />
                    <Button fx:id="applyTokenButton" onAction="#handleApplyToken"
                            style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-padding: 5px 12px;" text="Apply" />
                </HBox>

                <Label fx:id="tokenStatusLabel" style="-fx-text-fill: #4CAF50; -fx-font-size: 12px;" text="" wrapText="true" visible="false" managed="false" />
                <Label fx:id="discountLabel" style="-fx-text-fill: #FFD700; -fx-font-size: 13px; -fx-font-weight: bold;" text="" visible="false" managed="false" />

                <!-- Create Order Button -->
                <Button onAction="#handleCreateOrder" prefWidth="230.0"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-padding: 10px;"
                        text="Create Order" />

                <!-- Your Orders Button -->
                <Button onAction="#switchTohandleOrderList" prefWidth="230.0"
                        style="-fx-background-color: #9C27B0; -fx-text-fill: white;"
                        text="Your Orders" />

                <!-- Message Label -->
                <Label fx:id="messageLabel" style="-fx-text-fill: #E74C3C; -fx-wrap-text: true;" wrapText="true" />

            </VBox>
        </ScrollPane>

        <!-- TableView for Menu Items (Reduced Height) -->
        <TableView fx:id="menuItemTable" layoutX="326.0" layoutY="99.0" prefHeight="330.0" prefWidth="864.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="42.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="156.0" text="Name" />
                <TableColumn fx:id="descriptionColumn" prefWidth="274.0" text="Description" />
                <TableColumn fx:id="categoryColumn" prefWidth="102.0" text="Category" />
                <TableColumn fx:id="timeColumn" prefWidth="100.0" text="Time" />
                <TableColumn fx:id="priceColumn" prefWidth="175.0" text="Price" />
            </columns>
        </TableView>

        <!-- Image Preview Section -->
        <VBox layoutX="326.0" layoutY="440.0" prefHeight="192.0" prefWidth="864.0"
              style="-fx-background-color: #4a4e69; -fx-background-radius: 10; -fx-padding: 10;"
              alignment="CENTER" spacing="5.0">
            <Label fx:id="imagePreviewLabel" style="-fx-text-fill: #4caf50; -fx-font-size: 16px; -fx-font-weight: bold;"
                   text="Selected Item Preview" />
            <ImageView fx:id="selectedItemImageView" fitHeight="150.0" fitWidth="200.0"
                       preserveRatio="true"
                       style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0, 0, 0);" />
            <Button fx:id="enlargeImageButton" onAction="#handleEnlargeImage"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                    text="View Larger" visible="false" />
        </VBox>

        <!-- Exit Button -->
        <Button layoutX="44.0" layoutY="603.0" onAction="#handleExit" prefHeight="28.0" prefWidth="56.0" text="Exit" />

        <!-- Navigate to Home Button (Hidden by default) -->
        <Button fx:id="navigateToHome" layoutX="150.0" layoutY="300.0" onAction="#navigateToHome" text="Go to Dashboard" visible="false" />

    </children>
</AnchorPane>



