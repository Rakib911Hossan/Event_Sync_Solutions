<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="685.0" prefWidth="965.0" style="-fx-background-color: linear-gradient(to bottom, #094798, #0a1267);" stylesheets="@style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Corporate.Event_Sync.controller.ForgotPasswordController">
    <children>
        <!-- Outer VBox for centered area -->
        <VBox alignment="CENTER" layoutX="43.0" layoutY="14.0" maxHeight="632.0" maxWidth="978.0" prefHeight="624.0" prefWidth="923.0" spacing="20.0" AnchorPane.bottomAnchor="67.0" AnchorPane.leftAnchor="43.0" AnchorPane.rightAnchor="12.0" AnchorPane.topAnchor="14.0">

            <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #3ac5ac;" text="Reset Password" />

            <!-- Inner VBox with form background -->
            <VBox alignment="CENTER_LEFT" maxWidth="400.0" prefHeight="475.0" prefWidth="400.0" spacing="15.0" style="-fx-background-radius: 25; -fx-background-color: #4a4e69; -fx-padding: 30px; -fx-effect: dropshadow(gaussian, rgba(200,200,200,0.5), 10, 0.3, 0, 5);">

                <!-- Instructions Label -->
                <Label fx:id="instructionLabel" style="-fx-font-size: 13px; -fx-text-fill: #ffffff; -fx-wrap-text: true;" text="Enter your email to receive a reset token." wrapText="true" />

                <!-- Email Field -->
                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #ffffff;" text="Email" />
                    <TextField fx:id="emailField" prefWidth="340.0" promptText="Enter your email" />
                </VBox>

                <!-- Send Token Button -->
                <Button fx:id="sendTokenButton" onAction="#handleSendToken" prefHeight="35.0" prefWidth="150.0" style="-fx-cursor: hand; -fx-background-color: #3ac5ac; -fx-text-fill: white; -fx-font-weight: bold;" text="Send Token" />

                <!-- Token Field -->
                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #ffffff;" text="Reset Token" />
                    <TextField fx:id="tokenField" prefWidth="340.0" promptText="Enter token from email" />
                </VBox>

                <!-- New Password Field -->
                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #ffffff;" text="New Password" />
                    <TextField fx:id="newPasswordField" prefWidth="340.0" promptText="Enter new password" />
                </VBox>

                <!-- Confirm Password Field -->
                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #ffffff;" text="Confirm Password" />
                    <TextField fx:id="confirmPasswordField" prefWidth="340.0" promptText="Confirm new password" />
                </VBox>

                <!-- Reset Password Button -->
                <Button fx:id="resetPasswordButton" onAction="#handleResetPassword" prefHeight="35.0" prefWidth="150.0" style="-fx-cursor: hand; -fx-background-color: #3ac5ac; -fx-text-fill: white; -fx-font-weight: bold;" text="Reset Password" />

                <!-- Message Label -->
                <Label fx:id="messageLabel" style="-fx-font-size: 12px; -fx-text-fill: #3ac5ac; -fx-wrap-text: true;" wrapText="true" />
      
                     <!-- Back to Login Button -->
               <Button onAction="#goToLogin" prefHeight="35.0" prefWidth="150.0" style="-fx-cursor: hand; -fx-background-color: transparent; -fx-text-fill: #3ac5ac; -fx-border-color: #3ac5ac; -fx-border-width: 2px; -fx-border-radius: 5px;" text="Back to Login" />

            </VBox>

        </VBox>
    </children>
</AnchorPane>
