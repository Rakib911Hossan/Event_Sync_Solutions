<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="630.0" prefWidth="1080.0" style="-fx-background-color: #2b2d42;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Corporate.Event_Sync.controller.HomeController">
    <children>
        <!-- Centered User Dashboard Area -->
        <Label fx:id="currentDateTimeLabel" text="Date and Time" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />

        <!-- User Details Container -->
        <VBox alignment="CENTER_LEFT" layoutX="445.0" layoutY="132.0" prefHeight="367.0" prefWidth="484.0" spacing="15.0" styleClass="vbox">

        <!-- ImageView in top-right corner -->
            <AnchorPane prefHeight="143.0" prefWidth="442.0">
                <children>
                    <ImageView fx:id="userImageView" fitHeight="121.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
                    <!-- User Details Section -->
                    <HBox alignment="CENTER_LEFT" layoutX="2.0" layoutY="56.0" prefHeight="30.0" prefWidth="249.0" spacing="15.0">
                        <Label text="Name:" />
                        <Label fx:id="nameLabel" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" layoutX="1.0" layoutY="107.0" maxWidth="Infinity" minWidth="100" prefHeight="30.0" prefWidth="249.0" spacing="15.0">
                        <Label text="Phone:" />
                        <Label fx:id="phoneLabel" HBox.hgrow="ALWAYS" />
                    </HBox>
                </children>
            </AnchorPane>
            <HBox alignment="CENTER_LEFT" maxWidth="Infinity" minWidth="100" spacing="15.0">
                <Label text="Email:" />
                <Label fx:id="emailLabel" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" maxWidth="Infinity" minWidth="100" spacing="15.0">
                <Label text="Address:" />
                <Label fx:id="addressLabel" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" maxWidth="Infinity" minWidth="100" spacing="15.0">
                <Label text="Department:" />
                <Label fx:id="departmentLabel" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" maxWidth="Infinity" minWidth="100" spacing="15.0">
                <Label text="Office ID:" />
                <Label fx:id="officeIdLabel" HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>


        <!-- Right Side Buttons -->
        <VBox alignment="TOP_CENTER" layoutX="132.0" layoutY="187.0" prefHeight="312.0" prefWidth="186.0" spacing="15.0" AnchorPane.bottomAnchor="131.0" AnchorPane.rightAnchor="762.0" AnchorPane.topAnchor="187.0">
            <!-- User Details Button -->
            <Button fx:id="updateUserDashboard" onAction="#userDetails" prefHeight="28.0" prefWidth="105.0" text="Edit User" />
            <!-- Create Order Button -->
            <Button fx:id="createOrder" onAction="#switchToCreateOrder" prefHeight="28.0" prefWidth="107.0" text="Order" />
            <!-- Your Orders Button -->
            <Button fx:id="handleWeekDays" onAction="#handleWeekDays" text="WeekDays" />
            <Button fx:id="allUser" onAction="#allUser" prefHeight="28.0" prefWidth="99.0" text="All Users" />
            <Button fx:id="allMenuItems" onAction="#allMenuItems" prefHeight="28.0" prefWidth="117.0" text="Menu Items" />
         <Button fx:id="otherOrder" onAction="#otherOrder" prefHeight="28.0" prefWidth="133.0" text="Other Orders" />
            <Button fx:id="allOrder" onAction="#allOrder" prefHeight="28.0" prefWidth="160.0" text="University Orders" />
        </VBox>

        <!-- Exit Button -->
        <Button fx:id="exit" layoutX="56.0" layoutY="547.0" onAction="#handleExit" text="Exit" AnchorPane.bottomAnchor="55.0" AnchorPane.leftAnchor="56.0" />

        <!-- Logout Button -->
        <Button fx:id="logOut" layoutX="937.0" layoutY="40.0" onAction="#handleLogout" text="Logout" />

        <!-- Home Button -->
        <Button fx:id="handleHome" layoutX="43.0" layoutY="68.0" text="Home" />
      <Label layoutX="556.0" layoutY="74.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4caf50;" text="User Dashboard" />
    </children>
</AnchorPane>
