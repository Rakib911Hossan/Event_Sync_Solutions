<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="630.0" prefWidth="1080.0" style="-fx-background-color: #2b2d42;" styleClass="main-background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Corporate.Event_Sync.controller.OrderListController">
    <children>
        <TableView fx:id="orderTable" layoutX="391.0" layoutY="121.0" prefHeight="441.0" prefWidth="624.0">
            <columns>
                <TableColumn fx:id="orderIdColumn" prefWidth="100.0" text="Order ID" />
                <TableColumn fx:id="menuItemIdColumn" prefWidth="125.0" text="Menu Item" />
                <TableColumn fx:id="statusColumn" prefWidth="116.0" text="Status" />
                <TableColumn fx:id="orderDateColumn" prefWidth="180.0" text="Order Date" />
                <TableColumn fx:id="deleteOrderColumn" prefWidth="91.0" text="Delete " /> <!-- New Update Column -->
            </columns>
        </TableView>

        <!-- Update Fields -->
        <Label layoutX="57.0" layoutY="232.0" text="Order ID:" />
        <ComboBox fx:id="orderIdComboBox" layoutX="213.0" layoutY="234.0" prefHeight="30.0" prefWidth="117.0" promptText="Order Id" /> <!-- For selecting order ID -->

        <Label layoutX="56.0" layoutY="278.0" text="Menu Item ID:" />
        <ComboBox fx:id="menuItemComboBox" layoutX="214.0" layoutY="280.0" prefHeight="30.0" prefWidth="117.0" promptText="Items" /> <!-- For entering new menu item ID -->

        <Label layoutX="56.0" layoutY="326.0" text="Order Date:" />
        <DatePicker fx:id="orderDatePicker" layoutX="201.0" layoutY="325.0" prefHeight="32.0" prefWidth="128.0" /> <!-- For entering new order date -->

        <Label layoutX="56.0" layoutY="374.0" text="Status:" />
        <ComboBox fx:id="statusComboBox" layoutX="202.0" layoutY="376.0" prefHeight="30.0" prefWidth="128.0" promptText="Status">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="ORDERED" />
                    <String fx:value="PREPARED" />
                    <String fx:value="SERVED" />
                </FXCollections>
            </items>
        </ComboBox> <!-- For selecting order status -->

        <!-- Buttons -->
        <ButtonBar prefHeight="40.0" prefWidth="200.0" />
<!--        <Button layoutX="34.0" layoutY="91.0" mnemonicParsing="false" text="Home" onAction="#goToHome" />-->
        <Button layoutX="45.0" layoutY="534.0" mnemonicParsing="false" text="Exit" />
        <Button fx:id="updateOrderButton" layoutX="121.0" layoutY="442.0" mnemonicParsing="false" onAction="#updateOrder" prefHeight="28.0" prefWidth="128.0" text="Update Order" />
      <Button fx:id="homeDashboard" layoutX="973.0" layoutY="40.0" mnemonicParsing="false" onAction="#navigateToHome" text="Home" />
        <Button fx:id="createOrderButton" layoutX="45.0" layoutY="65.0" mnemonicParsing="false" onAction="#navigateToCreateOrder" prefHeight="24.0" prefWidth="71.0" text="Back" />
      <Label layoutX="610.0" layoutY="57.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4caf50;" text="Order List" />
      <Label layoutX="87.0" layoutY="163.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4caf50;" text="Update Order" />

    </children>
</AnchorPane>
