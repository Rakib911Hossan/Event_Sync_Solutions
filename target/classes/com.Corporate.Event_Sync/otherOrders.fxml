<AnchorPane prefHeight="630.0" prefWidth="1080.0" style="-fx-background-color: #2b2d42;" styleClass="main-background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Corporate.Event_Sync.controller.OtherOrderController">
    <children>
        <TableView fx:id="orderTable" layoutX="348.0" layoutY="91.0" prefHeight="448.0" prefWidth="732.0">
            <columns>
                <TableColumn fx:id="orderIdColumn" prefWidth="43.0" text="ID" />
                <TableColumn fx:id="userIdColumn" prefWidth="77.0" text="User Id" />
                <TableColumn fx:id="menuItemIdColumn" prefWidth="112.0" text="Menu Item" />
                <TableColumn fx:id="priceColumn" prefWidth="69.0" text="Price" />
                <TableColumn fx:id="statusColumn" prefWidth="86.0" text="Status" />
                <TableColumn fx:id="orderDateColumn" minWidth="0.0" prefWidth="126.0" text="Order Date" />
                <TableColumn fx:id="locationColumn" prefWidth="112.0" text="Location" />
                <TableColumn fx:id="deleteOrderColumn" prefWidth="91.0" text="Delete" />
            </columns>
        </TableView>

        <!-- Update Fields -->
        <Label layoutX="49.0" layoutY="194.0" text="Order ID:" />
        <ComboBox fx:id="orderIdComboBox" layoutX="184.0" layoutY="196.0" prefHeight="30.0" prefWidth="110.0" promptText="Order Id" />

        <Label layoutX="49.0" layoutY="239.0" text="Menu Items:" />
        <ComboBox fx:id="menuItemComboBox" layoutX="182.0" layoutY="241.0" prefHeight="30.0" prefWidth="110.0" promptText="Items" />

        <Label layoutX="50.0" layoutY="289.0" text="Status:" />
        <ComboBox fx:id="statusComboBox" layoutX="152.0" layoutY="289.0" prefHeight="30.0" prefWidth="138.0" promptText="Enter Status">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="ORDERED" />
                    <String fx:value="PREPARED" />
                    <String fx:value="SERVED" />
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Buttons -->
        <ButtonBar prefHeight="40.0" prefWidth="200.0" />
        <Button layoutX="44.0" layoutY="546.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="57.0" text="Exit" />
        <Button layoutX="108.0" layoutY="348.0" mnemonicParsing="false" onAction="#updateOrder" text="Update Order" />

        <Button fx:id="report" layoutX="108.0" layoutY="394.0" mnemonicParsing="false" onAction="#navigateToReport" prefHeight="28.0" prefWidth="128.0" text="Report" />
        <Button fx:id="homeDashboard" layoutX="39.0" layoutY="45.0" mnemonicParsing="false" onAction="#navigateToHome" text="Home" />
        <Label layoutX="597.0" layoutY="37.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4caf50;" text="Order List" />
        <Label layoutX="63.0" layoutY="131.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4caf50;" text="Update Order" />

    </children>
