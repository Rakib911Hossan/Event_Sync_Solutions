        <Label layoutX="356.0" layoutY="229.0" style="-fx-text-fill: white;" text="Address" AnchorPane.leftAnchor="356.0" AnchorPane.topAnchor="229.0" />
        <TextField fx:id="addressField" layoutX="456.0" layoutY="229.0" prefHeight="26.0" prefWidth="180.0" promptText="Enter your address" styleClass="input-field" AnchorPane.leftAnchor="456.0" AnchorPane.topAnchor="229.0" />

