        <Label layoutX="356.0" layoutY="79.0" style="-fx-text-fill: white;" text="Name *" AnchorPane.leftAnchor="356.0" AnchorPane.topAnchor="79.0" />
        <TextField fx:id="nameField" layoutX="456.0" layoutY="85.0" prefHeight="26.0" prefWidth="180.0" promptText="Enter your name" styleClass="input-field" AnchorPane.leftAnchor="456.0" AnchorPane.topAnchor="85.0" />

        <!-- Phone -->
        <Label layoutX="356.0" layoutY="129.0" style="-fx-text-fill: white;" text="Phone" AnchorPane.leftAnchor="356.0" AnchorPane.topAnchor="129.0" />
        <TextField fx:id="phoneField" layoutX="456.0" layoutY="129.0" prefHeight="26.0" prefWidth="180.0" promptText="Enter your phone" styleClass="input-field" AnchorPane.leftAnchor="456.0" AnchorPane.topAnchor="129.0" />

