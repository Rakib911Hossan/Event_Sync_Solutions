        <Button fx:id="exitButton" layoutX="53.0" layoutY="520.0" onAction="#handleExit" prefHeight="28.0" prefWidth="57.0" styleClass="button" text="Exit" AnchorPane.bottomAnchor="45.0" AnchorPane.leftAnchor="53.0" />
