                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="HR" />
                    <String fx:value="ADMINISTRATION" />
                    <String fx:value="ACCOUNTS" />
                    <String fx:value="IT" />
                    <String fx:value="MARKETING" />
                    <String fx:value="CSE" />
                    <String fx:value="EEE" />
                    <String fx:value="BBA" />
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Office ID -->
        <Label layoutX="356.0" layoutY="429.0" style="-fx-text-fill: white;" text="Office ID *" AnchorPane.leftAnchor="356.0" AnchorPane.topAnchor="429.0" />
