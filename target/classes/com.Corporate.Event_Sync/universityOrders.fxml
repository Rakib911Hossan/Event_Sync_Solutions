<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="630.0" prefWidth="1080.0" style="-fx-background-color: #2b2d42;" styleClass="main-background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Corporate.Event_Sync.controller.UniversityOrderController">
    <children>
        <TableView fx:id="orderTable" layoutX="348.0" layoutY="91.0" prefHeight="448.0" prefWidth="672.0">
            <columns>
                <TableColumn fx:id="orderIdColumn" prefWidth="65.0" text="ID  " />
                <TableColumn fx:id="userIdColumn" prefWidth="85.0" text="User Id" />
                <TableColumn fx:id="menuItemIdColumn" prefWidth="118.0" text="Menu Item" />
                <TableColumn fx:id="statusColumn" prefWidth="102.0" text="Status" />
                <TableColumn fx:id="orderDateColumn" minWidth="0.0" prefWidth="176.0" text="Order Date" />
                <TableColumn fx:id="deleteOrderColumn" prefWidth="110.0" text="Delete" /> <!-- New Update Column -->
            </columns>
        </TableView>

        <!-- Update Fields -->
        <Label layoutX="49.0" layoutY="194.0" text="Order ID:" />
        <ComboBox fx:id="orderIdComboBox" layoutX="184.0" layoutY="196.0" prefHeight="30.0" prefWidth="110.0" promptText="Order Id" /> <!-- For selecting order ID -->

        <Label layoutX="49.0" layoutY="239.0" text="Menu Items:" />
        <ComboBox fx:id="menuItemComboBox" layoutX="182.0" layoutY="241.0" prefHeight="30.0" prefWidth="110.0" promptText="Items" /> <!-- For entering new menu item ID -->

        <Label layoutX="49.0" layoutY="289.0" text="Order Date:" />
        <DatePicker fx:id="orderDatePicker" layoutX="175.0" layoutY="286.0" prefHeight="32.0" prefWidth="117.0" /> <!-- For entering new order date -->

        <Label layoutX="50.0" layoutY="334.0" text="Status:" />
        <ComboBox fx:id="statusComboBox" layoutX="152.0" layoutY="334.0" prefHeight="30.0" prefWidth="138.0" promptText="Enter Status">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="ORDERED" />
                    <String fx:value="PREPARED" />
                    <String fx:value="SERVED" />
                </FXCollections>
            </items>
        </ComboBox> <!-- For selecting order status -->

        <!-- Buttons -->
        <ButtonBar prefHeight="40.0" prefWidth="200.0" />
        <!--        <Button layoutX="34.0" layoutY="91.0" mnemonicParsing="false" text="Home" onAction="#goToHome" />-->
        <Button layoutX="44.0" layoutY="546.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="57.0" text="Exit" />
        <Button layoutX="108.0" layoutY="388.0" mnemonicParsing="false" onAction="#updateOrder" text="Update Order" />
<!--        <Label fx:id="messageLabel" layoutX="100.0" layoutY="200.0"/>-->

        <Button fx:id="report" layoutX="108.0" layoutY="434.0" mnemonicParsing="false" onAction="#navigateToReport" prefHeight="28.0" prefWidth="128.0" text="Report" />
        <Button fx:id="homeDashboard" layoutX="39.0" layoutY="45.0" mnemonicParsing="false" onAction="#navigateToHome" text="Home" />
      <Label layoutX="597.0" layoutY="37.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4caf50;" text="Order List" />
      <Label layoutX="63.0" layoutY="131.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4caf50;" text="Update Order" />

    </children>
